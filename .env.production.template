# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Application Settings
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters

# Database Configuration (External MongoDB)
DATABASE_NAME=personal_manager
MONGODB_USER=admin
MONGODB_PASSWORD=your-mongodb-password-change-this
MONGODB_HOST=host.docker.internal
MONGODB_PORT=27017
MONGODB_AUTH_SOURCE=admin

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS_STR=https://yourdomain.com,https://www.yourdomain.com

# Google API Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CREDENTIALS_FILE=/app/data/credentials.json

# Timezone
SCHEDULER_TIMEZONE=America/Los_Angeles

# Logging
LOG_LEVEL=info

# Security Headers
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

# Rate Limiting (if implemented)
RATE_LIMIT_PER_MINUTE=100

# File Upload Settings
MAX_UPLOAD_SIZE=10MB
UPLOAD_DIR=/app/uploads