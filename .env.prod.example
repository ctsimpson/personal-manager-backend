# Production Environment Variables Template
# Copy this to .env.prod and fill in your actual values

# Application Settings
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security (REQUIRED - Change these!)
SECRET_KEY=your-super-secret-key-change-this-in-production-use-32-chars-min
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration (REQUIRED)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=admin
MONGODB_PASSWORD=your-secure-mongodb-password-change-this
MONGODB_AUTH_SOURCE=admin
DATABASE_NAME=personal_manager

# CORS Settings (Update with your frontend URLs)
ALLOWED_ORIGINS_STR=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Google API (REQUIRED for Google Calendar integration)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CREDENTIALS_FILE=data/credentials.json

# Timezone
SCHEDULER_TIMEZONE=America/Los_Angeles

# Optional: Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Optional: Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Optional: Logging
LOG_LEVEL=info
LOG_FORMAT=json